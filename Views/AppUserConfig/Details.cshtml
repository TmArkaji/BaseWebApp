@model BaseWebApplication.Models.AppUserConfigVM

@{
    ViewData["Title"] = "Details";
}

<div class="container">

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">User: @Model.AppUser.UserName</h3>
            <h6 class="card-subtitle">Role: Admin</h6>
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <h3 class="box-title mt-1">General Info</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-product">
                            <tbody>
                                <tr>
                                    <td width="390">@Html.DisplayNameFor(model => model.AppUser.PrimerNombre)</td>
                                    <td>@Html.DisplayFor(model => model.AppUser.PrimerNombre)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.AppUser.SegundoNombre)</td>
                                    <td>@Html.DisplayFor(model => model.AppUser.PrimerApellido)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.AppUser.PrimerApellido)</td>
                                    <td>@Html.DisplayFor(model => model.AppUser.PrimerApellido)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.AppUser.SegundoApellido)</td>
                                    <td>@Html.DisplayFor(model => model.AppUser.SegundoApellido)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.AppUser.EmailConfirmed)</td>
                                    <td>@Html.DisplayFor(model => model.AppUser.EmailConfirmed)</td>
                                </tr>
                                <tr>
                                    <td>@Html.DisplayNameFor(model => model.CreateDate)</td>
                                    <td>@Html.DisplayFor(model => model.CreateDate)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 text-end">
                    <a asp-action="Index" class="btn btn-dark">
                        <i class="bi bi-box-arrow-down-left"></i> Back to List
                    </a> &nbsp;
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.EncryptedID" title="Edit">
                        <i class="bi bi-download"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>