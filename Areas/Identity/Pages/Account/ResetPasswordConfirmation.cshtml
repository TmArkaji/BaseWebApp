@page
@model ResetPasswordConfirmationModel
@{
    Layout = "/Views/Shared/_EmptyLayout.cshtml";
    ViewData["Title"] = "Reset password confirmation";
}
<div class="row vh-100 g-0">

    <div class="row align-items-center justify-content-center h-100 g-0 px-4 px-sm-0">
        <div class="col col-sm-6 col-lg-4 col-xl-4">

            <a href="#" class="d-flex justify-content-center mb-3">
                <img src="~/images/logo.png" alt="" width="60" />
            </a>

            <div class="text-center mb-5">
                <h3 class="fw-bold">@ViewData["Title"]</h3>
                <p>
                    Your password has been reset. Please click here to log in
                </p>
            </div>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg w-100 mb-5"><span>Login</span> </a>
        </div>
    </div>
</div>