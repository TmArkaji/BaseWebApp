@page
@model ForgotPasswordModel
@{
    Layout = "/Views/Shared/_EmptyLayout.cshtml";
    ViewData["Title"] = "Forgot your password?";
}

<div class="row vh-100 g-0">

    <div class="row align-items-center justify-content-center h-100 g-0 px-4 px-sm-0">
        <div class="col col-sm-6 col-lg-4 col-xl-4">

            <a href="#" class="d-flex justify-content-center mb-3">
                <img src="~/images/logo.png" alt="" width="60" />
            </a>

            <div class="text-center mb-5">
                <h3 class="fw-bold">@ViewData["Title"]</h3>
                <h4>Enter your email.</h4>
                <hr />
            </div>
            <div>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                </form>
            </div>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-outline-secondary btn-outline-custom btn-lg w-100 mt-3"><span>Home</span> </a>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
