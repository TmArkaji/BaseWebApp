@page
@model ForgotPasswordConfirmation
@{
    Layout = "/Views/Shared/_EmptyLayout.cshtml";
    ViewData["Title"] = "Forgot password confirmation";
}
<div class="row vh-100 g-0">

    <div class="row align-items-center justify-content-center h-100 g-0 px-4 px-sm-0">
        <div class="col col-sm-6 col-lg-4 col-xl-4">

            <a href="#" class="d-flex justify-content-center mb-3">
                <img src="~/images/logo.png" alt="" width="60" />
            </a>

            <div class="text-center mb-5">
                <h3 class="fw-bold">@ViewData["Title"]</h3>
                <h2>Please check your email to reset your password.</h2>
                <hr />
            </div>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-lg btn-outline-secondary btn-outline-custom btn-lg w-100 mt-3"><span>Home</span> </a>

        </div>
    </div>
</div>